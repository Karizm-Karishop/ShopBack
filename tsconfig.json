{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "preserve",
    "outDir": "dist",
    "types": ["jest"],
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "declaration": true,
    "declarationDir": "dist/types",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/types/*"]
}
